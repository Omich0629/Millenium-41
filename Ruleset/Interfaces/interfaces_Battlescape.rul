    elements:
      - id: window
        color: 239
      - id: button
        color: 239
        color2: 239
      - id: text
        color: 138

### DEBRIEFING MENU
  - type: debriefing
    backgroundImage: DEBRIEFING_BACKGROUND.SCR
    elements:
      - id: palette
        color: 0     # brown
      - id: window
        color: 239   # bright green
      - id: heading
        color: 138   # yellow
      - id: text
        color: 138   # yellow
      - id: list
        color: 239   # bright green
        color2: 239   # bright green
      - id: totals
        color: 239   # bright green
      - id: button
        color: 239   # bright green
      - id: errorPalette
        color: 0     # brown
      - id: errorMessage
        color: 239   # bright green

